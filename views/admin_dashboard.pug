extends layout

block content
    title Dashboard
    
    header.mobile-header 
        button.hamburger 
            div.bar 
        img(src="/images/logo_white.png", alt="logo")
    div.page
        nav
            img(src="/images/logo_white.png", alt="logo")
            ul
                li 
                    a(href="/admin_dashboard", style="color:red") Dashboard 
                li
                    a#um_btn(href='#') User Management
                    ul#um-show 
                        li 
                            a(href="/user_list") User List
                        li 
                            a(href="/create_user") Create User Account 
                li
                    a#sm_btn(href='#') Subject Management
                    ul#sm-show 
                        li 
                            a(href="/admin_subjectlist") Subject List 
                        li
                            a(href="/create_subject") Create Subject 
                li 
                    a.logout(href="logout") Logout

        
        nav.mobile-nav
            ul
                li 
                    a(href="/admin_dashboard", style="color:red") Dashboard 
                li
                    a#mobile_um_btn(href='#') User Management
                    ul#mobile_um-show 
                        li 
                            a(href="/user_list") User List
                        li 
                            a(href="/create_user") Create User Account 
                li
                    a#mobile_sm_btn(href='#') Subject Management
                    ul#mobile_sm-show 
                        li 
                            a(href="/admin_subjectlist") Subject List 
                        li
                            a(href="/create_subject") Create Subject 
                li 
                    a.logout(href="logout") Logout  



        div.container
            div.statistic 
                img(src="/images/user_icon.png", alt="user icon")
                p User Count: 
                p #{userCount}
            div.statistic 
                img(src="/images/subject_icon.png", alt="user icon")
                p Subject Count: 
                p #{subjectCount}

    footer 
        p Â© 2024 Quiz Horizon. All rights reserved.

    link(rel='stylesheet', href='/stylesheets/admin.css')
    script(src = "javascripts/navibar.js")
    