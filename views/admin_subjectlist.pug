extends layout

block content
    header.mobile-header 
        button.hamburger 
            div.bar 
        img(src="/images/logo_white.png", alt="logo")
    div.page
        nav
            img(src="/images/logo_white.png", alt="logo")
            ul
                li 
                    a(href="/admin_dashboard") Dashboard 
                li
                    a#um_btn(href='#') User Management
                    ul#um-show 
                        li 
                            a(href="/user_list") User List
                        li 
                            a(href="/create_user") Create User Account 
                li
                    a#sm_btn(href='#') Subject Management
                    ul#sm-show 
                        li 
                            a(href="/admin_subjectlist", style="color:red; border-bottom: 1px solid red") Subject List 
                        li
                            a(href="/create_subject") Create Subject 
                li 
                    a.logout(href="logout") Logout
     
        nav.mobile-nav
            ul
                li 
                    a(href="/admin_dashboard") Dashboard 
                li
                    a#mobile_um_btn(href='#') User Management
                    ul#mobile_um-show 
                        li 
                            a(href="/user_list") User List
                        li 
                            a(href="/create_user") Create User Account 
                li
                    a#mobile_sm_btn(href='#') Subject Management
                    ul#mobile_sm-show 
                        li 
                            a(href="/admin_subjectlist", style="color:red; border-bottom: 1px solid red") Subject List 
                        li
                            a(href="/create_subject") Create Subject 
                li 
                    a.logout(href="logout") Logout

        div.container(style='flex-direction:column; flex:1;')
            h1 Subject List
            div#table_list_wrapper
                div#table_list_filter
                    label Search
                        input(type='text', id='searchInput', placeholder='', name="search")
                table
                    thead
                        tr
                            th Subject Name
                            th Taught By
                            th Operation
                        tbody#subjectTableBody
                        
                div#page_turner 
                    label#pageCount 
                    div#pageBtn 
                        button#prevPage Previous Page
                        button#nextPage Next Page
                        
                    
                    

                    // Add your table data rows here
            #confirmationModal.modal
                .modal-content
                    p Are you sure you want to delete this subject?
                    button#confirmDelete Yes
                    button#cancelDelete Cancel
                        



