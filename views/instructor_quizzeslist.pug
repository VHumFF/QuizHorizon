extends layout

block content
    header.mobile-header 
        button.hamburger 
            div.bar 
        img(src="/images/logo_white.png", alt="logo")
    div.page
        nav
            img(src="/images/logo_white.png", alt="logo")
            ul
                li 
                    a(href="/instructor_dashboard") Dashboard 
                li
                    a#um_btn(href='/instructor_subject_list', style="color:red") Subject List
                li 
                    a.logout(href="/logout") Logout

        
        nav.mobile-nav
            ul
                li 
                    a(href="/instructor_dashboard") Dashboard
                li
                    a#um_btn(href='/instructor_subject_list', style="color:red") Subject List
                li 
                    a.logout(href="/logout") Logout  

        div.container(style='flex-direction:column; flex:1;')
            h1 Quiz List
            div#table_list_wrapper
                div#table_list_filter
                    label Search
                        input(type='text', id='searchInput', placeholder='', name="search")
                    button#openModal ADD
                table
                    thead
                        tr
                            th Quiz Name
                            th Status
                            th Operation
                        tbody#subjectTableBody
                        
                div#page_turner 
                    label#pageCount 
                    div#pageBtn 
                        button#prevPage Previous Page
                        button#nextPage Next Page
                        
                    
        .modal#modal
            .modal-content
                p#quizError Invalid Quiz name, must be 3-35 characters long and contain only letters.
                label(for="quizName") Quiz Name:
                input(type="text", id="quizName", name="quizName")
                button#createQuiz Create
                button#closeModal Close


